{
  "name": "@alcalzone/pak",
  "version": "0.9.0",
  "description": "Programmatic wrapper around popular Node.js package managers",
  "main": "build/index.js",
  "types": "build/index.d.ts",
  "files": [
    "build/**"
  ],
  "publishConfig": {
    "access": "public"
  },
  "repository": "https://github.com/AlCalzone/pak.git",
  "author": "Dominic Griesel <d.griesel@gmx.net>",
  "license": "MIT",
  "scripts": {
    "test:reset": "jest --clear-cache",
    "test:ts": "jest",
    "test:ci": "yarn run test:ts --runInBand",
    "test:watch": "yarn run test:ts --watch",
    "test": "yarn run test:watch",
    "lint:ts": "eslint --ext .ts \"src/**/*.ts\"",
    "lint": "yarn run lint:ts",
    "prebuild": "rimraf ./build",
    "build": "tsc -p tsconfig.build.json",
    "check": "tsc -p tsconfig.build.json --noEmit",
    "watch": "yarn run build --watch",
    "release": "release-script"
  },
  "devDependencies": {
    "@alcalzone/release-script": "^2.2.1",
    "@babel/core": "^7.19.1",
    "@babel/plugin-transform-typescript": "^7.19.1",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-typescript": "^7.18.6",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^29.0.2",
    "@types/node": "^14.18.29",
    "@types/rimraf": "^3.0.2",
    "@types/semver": "^7.3.12",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^29.0.3",
    "jest-extended": "^3.1.0",
    "jest-jasmine2": "^29.7.0",
    "prettier": "^2.7.1",
    "prettier-plugin-organize-imports": "^3.1.1",
    "rimraf": "^3.0.2",
    "source-map-support": "^0.5.21",
    "typescript": "~4.8.3"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "execa": "~5.0.0",
    "fs-extra": "^10.1.0",
    "semver": "^7.3.7",
    "tiny-glob": "^0.2.9"
  },
  "packageManager": "yarn@3.2.3"
}
